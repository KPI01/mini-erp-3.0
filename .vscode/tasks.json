{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "project install",
            "type": "shell",
            "command": "pnpm i",
            "options": {
                "cwd": "${workspaceFolder}/web_app"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "dev server",
            "type": "shell",
            "command": "pnpm run dev",
            "options": {
                "cwd": "${workspaceFolder}/web_app"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}